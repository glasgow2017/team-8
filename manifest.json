{
  "manifest_version": 2,
  "name": "Team 8 App",
  "version": "0.1.0",
  "homepage_url": "https://github.com/glasgow2017/team-8",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "node_modules/jquery/dist/jquery.min.js",
        "node_modules/jquery.hotkeys/jquery.hotkeys.js",
        "content/add_top_banner.js",
        "content/extract_important_sentence.js",
        "content/index.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "persistent": true,
    "scripts": ["background/index.js"]
  },
  "browser_action": {
    "default_icon": "icons/team8-32.png",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "background",
    "tabs",
    "storage"
  ],
  "icons": {
    "16": "icons/team8-16.png",
    "32": "icons/team8-32.png",
    "128": "icons/team8-128.png"
  }
}
